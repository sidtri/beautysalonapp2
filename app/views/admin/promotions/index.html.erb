<%= button_to "Actie Toevoegen", new_admin_promotion_path, method: "get" %>
<table>
  <% @promotions.each do |promotion| %>
    <tr>
      <td><%= link_to promotion.title, admin_promotion_path(promotion) %></td>
      <td><%= link_to "Aanpassen", edit_admin_promotion_path(promotion) %>&nbsp;&nbsp;<%= link_to "Verwijderen", admin_promotion_path(promotion), method: :delete, data: { confirm: "Ben je zeker?" } %></td>
    </tr>
  <% end %>
</table>

