<%= form_for [:admin, @treatment], html: { id: "treatment-form", multipart: true } do |f| %>
  <fieldset>
    <div>
      <%= f.label :title, "Titel" %>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :tagline, "Tagline" %>
      <%= f.text_field :tagline %>
    </div>
    <div>
      <%= f.label :summary, "Samenvatting" %>
      <%= f.text_area :summary %>
    </div>
    <div>
      <%= f.label :description, "Beschrijving" %>
      <%= f.text_area :description %>
    </div>
    <div>
      <%= f.label :image %>
      <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png' %>
    </div>
    <div>
      <%= f.label :price, "Prijs" %>
      <%= f.text_field :price %>
    </div>
    <% if @treatment.new_record? %>
      <%= f.button "Behandeling Toevoegen" %>
    <% else %>
      <%= f.button "Behandeling Aanpassen" %>
    <% end %>
  </fieldset>
<% end %>
