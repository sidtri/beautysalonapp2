<section class="dashboard">
  <%= button_to "Behandeling Toevoegen", new_admin_treat_path, method: "get" %>
  <table class="table-borders">
    <% if @treats.count != 0 %>
      <% @treats.each do |treat| %>
        <tr>
          <td><%= link_to treat.title, admin_treat_path(treat) %></td>
          <td><%= link_to "Aanpassen", edit_admin_treat_path(treat) %>&nbsp;&nbsp;
            <%= link_to "Verwijderen", admin_treat_path(treat), method: :delete, data: { confirm: "Ben je zeker?" } %></td>
        </tr>
      <% end %>
    <% else %>
      <p>Er zijn momenteel geen behandelingen, voeg een nieuwe behandeling toe</p>
    <% end %>
  </table>
</section>
