<section class="listing">
  <h1>Producten</h1>
  <% @products.each do |product| %>
    <div class="item">
      <header>
        <h1><%= product.title %></h1>
      </header>
      <% if product.image.present? %>
        <%= image_tag product.image.url %>
      <% end %>
      <p><%= product.description %></p>
    </div>
  <% end %>
</section>

