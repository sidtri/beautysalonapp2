<%= form_for @contact do |f| %>
  <fieldset>
    <div>
      <%= f.label :name, "Naam" %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :email, "Email" %>
      <%= f.text_field :email %>
    </div>
    <div>
      <%= f.label :phone, "Telefoon" %>
      <%= f.text_field :phone %>
    </div>
    <div>
      <%= f.label :message, "Gewenste behandeling" %>
      <%= f.text_area :message %>
    </div>
    <%= f.button "Maak een Afspraak" %>
  </fieldset>
<% end %>
