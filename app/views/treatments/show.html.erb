<article class="behandeling">
  <div class="breadcrumb">
    <%= link_to @treatment.category.name, behandelingen_path(@treatment.category_id) %>
    <a href="javascript:void(0)"><%= @treatment.title %></a>
  </div>
  <header>
    <h1><%= @treatment.title %></h1>
    <p class="tagline">Een perfecte huidanalyse voor een perfecte behandeling!</p>
  </header>
  <aside>
    <% if @treatment.image.present? %>
      <%= image_tag @treatment.image.url %>
    <% end %>
  </aside>
  <div class="content">
    <p><%= @treatment.description %></p>
    <% if @treatment.price.present? %>
      <p class="price"><strong>Prijs:</strong> <%= @treatment.price %></p>
    <% end %>
    <%= button_to "Maak een Afspraak", new_contact_path, method: "get" %>
  </div>
</article>

